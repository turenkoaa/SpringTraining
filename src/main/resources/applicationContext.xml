<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>

    <bean class="com.db.xml_example.InjectRandomIntAnnotationBeanPostProcessor"/>

    <bean id="shakeSpear" name="shakeSpearName" class="com.db.xml_example.ShakeSpearQuoter">
        <property name="message" value="To be or not to be"/>
    </bean>

    <bean id="terminator" name="terminator" class="com.db.xml_example.TerminatorQuoter">
        <property name="messages">
            <list value-type="java.lang.String">
                <value>I will be back</value>
                <value>Astanavista</value>
                <ref bean="myString"/>
            </list>
        </property>
    </bean>

    <bean id="myString" class="java.lang.String">
        <constructor-arg index="0" value="trust me"/>
    </bean>

    <bean id="talkingRobot" class="com.db.xml_example.TalkingRobot" scope="prototype">
        <property name="quoters">
            <list value-type="com.db.xml_example.Quoter">
                <ref bean="shakeSpear"/>
                <ref bean="terminator"/>
            </list>
        </property>
    </bean>

</beans>